extends layout

block content
  .container
    .form-heading
    .login-form
      .main-div
        .panel
          h2 Admin Login
          p Please enter your email and password
        form#login
          .form-group
            input.form-control(name="username" type='text', placeholder='Username', required)
          .form-group
            input.form-control(name="password" type='password', placeholder='Password', required)
          .forgot
            a(href='#') Forgot password?
          button.btn.btn-primary#loginBtn(type='submit') Login

  script(src='/javascripts/admin/login.js')  
