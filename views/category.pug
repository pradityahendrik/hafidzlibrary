.bg-light.text-black#category
    .container-fluid
        .row.py-2
            .col-md-3.py-2 
                //- category
                .card
                    .card-header.text-center.bg-pink.text-white Kategori
                    ul.list-group#listCategory
                        span.spinner-border.spinner-border.text-pink.mx-auto.my-5#listCategoryLoader
            .col.md-9.py-2
                //- search & filter
                form
                .row.py-2
                    .col-md-3
                        .form-group
                            select.form-control
                                option Filter
                                option Unggulan
                                option Obral 
                    .col-md-6                   
                        .form-group
                            .input-group
                                input.form-control(type="text", placeholder="Pencarian")
                                .input-group-append
                                    button.btn.btn-outline-primary(type="button")
                                        i.fa.fa-search  
                    .col-md-3
                        ul.pagination.justify-content-end
                            li.page-item
                                a.page-link(href="")
                                    span &laquo;
                                    span.sr-only Previous
                            li.page-item
                                a.page-link(href="") 1
                            li.page-item
                                a.page-link(href="") 2
                            li.page-item
                                a.page-link(href="") 3
                            li.page-item
                                a.page-link(href="")
                                    span &raquo;
                                    span.sr-only Next
                //- list
                .row.row-cols-1.row-cols-md-4.listPackage
                        

script(src='/javascripts/category.js')  
